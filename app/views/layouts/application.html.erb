<!DOCTYPE html>
<html>
<head>
  <title>Luis Barajas</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

  <link href='https://fonts.googleapis.com/css?family=Raleway:700,400,200' rel='stylesheet' type='text/css'>
  <link href='https://fonts.googleapis.com/css?family=Poiret+One' rel='stylesheet' type='text/css'>
</head>
<body>

    <header id="main-navigation" class="clearfix">
        <div class="brand-logo">
            <a id="logo" href="#page-top"><%= image_tag "logo.png", class: "img-circle" %></a>
        </div>
        <div class="social">
            <a onclick="javascript:window.open('https://github.com/luisbarajasp', '_blank')"><i class="fa fa-github"></i></a>
            <a onclick="javascript:window.open('https://twitter.com/luis_barajasp', '_blank')"><i class="fa fa-twitter"></i></a>
            <a onclick="javascript:window.open('https://www.facebook.com/luisbarajasp', '_blank')"><i class="fa fa-facebook"></i></a>
            <a href="mailto:luisbarajasp@gmail.com"><i class="fa fa-envelope"></i></a>
        </div>
        <div class="btn-navigation" onclick="return toggleNav()">
            <i id="icon" class="fa fa-bars"></i>
        </div>
        <nav class="navbar">
            <% if admin_signed_in? %>
                <%= link_to "Home", root_path %>
                <!-- Single button -->
				<div class="btn-group">
				  <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
				    Luis</i><span class="caret"></span>
				  </button>
				  <ul class="dropdown-menu">
                    <li><%= link_to "New Project", new_project_path %></li>
				    <li><%= link_to "Languages", languages_path %></li>
	              	<li role="separator" class="divider"></li>
	              	<li><%= link_to "Sign Out", destroy_admin_session_path, method: :delete %></li>
				  </ul>
				</div>
            <% end %>
            <a class="inactive page-scroll" href="#about-me"><i class="fa fa-child"></i>&nbsp; About Me</a>
            <a class="inactive page-scroll" href="#projects-content"><i class="fa fa-folder"></i>&nbsp; Projects</a>
            <a class="inactive page-scroll" href="#contact"><i class="fa fa-paper-plane"></i>&nbsp; Contact Me</a>
        </nav>
    </header>

    <div class="navigation-menu">
        <div class="link page-scroll-m">
            <a href="#about-me">About Me</a><br>
        </div>
        <div class="link page-scroll-m">
            <a href="#projects-content">Projects</a><br>
        </div>
        <div class="link page-scroll-m">
            <a href="#contact">Contact Me</a><br>
        </div>
    </div>

    <% if notice %>
          <div class="alert alert-success">
            <a href="#" data-dismiss="alert" class="close">×</a>
            <ul>
              <li>
                <%= notice %>
              </li>
            </ul>
          </div>
    <% elsif alert %>
        <div class="alert alert-danger">
          <a href="#" data-dismiss="alert" class="close">×</a>
          <ul>
            <li>
              <%= alert %>
            </li>
          </ul>
        </div>
    <% end %>

    <%= yield %>

</body>
</html>
