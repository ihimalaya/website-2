<%= form_for @language do |f| %>
	<% if @language.errors.any? %>

		<h2><%= pluralize(@language.errors.count, "error") %> avoid saving the language:</h2>
		<ul>
			<% @language.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
	<% end %>

	<div class="form-group">
		<%= f.label :name %> <br>
		<%= f.text_field :name, class: "form-control" %>
	</div>

	<div class="form-group">
   	 	<%= f.submit "Enviar", class: "btn btn-success" %>
 	</div>

<% end %>
